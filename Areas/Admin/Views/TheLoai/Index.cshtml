@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Style the header */
        header {
            background-color: lightblue;
            padding: 30px;
            text-align: center;
            font-size: 35px;
            color: black;
            border: 2px solid black;
        }

        /* Create two columns/boxes that floats next to each other */
        nav {
            float: left;
            width: 30%;
            height: 300px; /* only for demonstration, should be removed */
            background: pink;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 2px solid black;
            border-top: none;
            border-bottom: none;
        }

            /* Style the list inside the menu */
            nav ul {
                list-style-type: none;
                padding: 0;
            }

        article {
            float: left;
            padding: 20px;
            width: 70%;
            background-color: lightgreen;
            height: 300px; /* only for demonstration, should be removed */
            display: flex;
            justify-content: center;
            align-items: center;
            border: 2px solid black;
            border-left: none;
            border-top: none;
            border-bottom: none;
        }

        /* Clear floats after the columns */
        section::after {
            content: "";
            display: table;
            clear: both;
        }

        /* Style the footer */
        footer {
            background-color: orange;
            padding: 10px;
            text-align: center;
            color: black;
            display: flex;
            justify-content: center;
            align-items: center;
            border: 2px solid black;
        }

        /* Responsive layout - makes the two columns/boxes stack on top of each other instead of next to each other, on small screens */
        @@media (max-width: 600px) {
            nav, article {
                width: 100%;
                height: auto;
            }
        }
    </style>
</head>
<body>

    <header>
        <h2>Bài Tập</h2>
    </header>

    <sectqion>
        <nav>
            <h1>Trần Hoài Nghĩa 1721031589</h1>
        </nav>

        <article>
            <h1>Giới thiệu bản thân</h1>
        </article>
    </sectqion>

    <footer>
        <p>@@Copyright Trần Hoài Nghĩa - 2003 <p>
    </footer>

</body>
</html>
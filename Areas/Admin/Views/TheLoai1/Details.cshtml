
@{
    ViewData["Title"] = "Details";
}

@model TheLoai1

<div class="container">
    <h3>Thông tin thể loại</h3>
    <form method="post" asp-action="Details">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label class="mt-3">Tên thể loại</label>
            <input asp-for="Name" type="text" class="form-control mt-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="mt-3">Ngày tạo</label>
            <input asp-for="TimeCreated" type="text" class="form-control mt-2" />
            <span asp-validation-for="TimeCreated" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3" asp-action="Index" asp-route-id="@Model.ID">Trang chủ</button>
    </form>
</div>

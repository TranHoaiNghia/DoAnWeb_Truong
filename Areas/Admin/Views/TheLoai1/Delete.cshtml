
@{
    ViewData["Title"] = "Delete";
}

@model TheLoai1

<div class="container">
    <h3>Xoá thể loại</h3>
    <form method="post" asp-action="DeleteConfirm">
        <input asp-for="ID" type="hidden"/>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label class="mt-3">Tên thể loại</label>
            <input asp-for="Name" type="text" class="form-control mt-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="mt-3">Ngày tạo</label>
            <input asp-for="TimeCreated" type="text" class="form-control mt-2" />
            <span asp-validation-for="TimeCreated" class="text-danger"></span>
        </div>

        <a asp-action="Index" class="btn btn-secondary mt-3">Huỷ</a>
        <button type="submit" class="btn btn-primary mt-3">Xoá</button>
    </form>
</div>